// 尝试输出 9*9 乘法表
// 例如
// 1 * 1 =  1
// 2 * 1 =  2  2 * 2 =  4
// 3 * 1 =  3  3 * 2 =  6  3 * 3 =  9
// ...
fn 输出乘法表(println : (String) -> Unit) -> Unit {
  // 使用 for 循环
  for i = 1; i < 10; i = i + 1 {
    let mut str = ""
    for j = 1; j <= i; j = j+1{
      if i*j < 10{
        str = str+"\{i} * \{j} =  \{i*j}"
      }
      else{
        str = str+"\{i} * \{j} = \{i*j}"
      }
      if j < i { str = str+"  "}
    }
    println(str)
  }
}

